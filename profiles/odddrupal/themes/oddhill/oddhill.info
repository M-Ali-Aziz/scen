; The name and description of the theme used on the admin/build/themes page.
name        = oddhill
description = Odd Tao is a theme that is all about going against the flow.
core       = 7.x


; Stylesheets
stylesheets[screen][]   = css/reset.css
stylesheets[screen][]   = css/default.css
stylesheets[screen][]   = css/messages.css
stylesheets[screen][]   = css/forms.css
stylesheets[print][] = css/print.css
stylesheets[handheld][] = css/mobile.css
stylesheets[only screen and (max-device-width: 480px)][] = css/iphone.css


; Set the conditional stylesheets that are processed by IE.
conditional-stylesheets[if IE][all][]       = css/ie.css


; Javascript files
scripts[] = js/jquery.form-focused.js
scripts[] = js/jquery.validate.min.js
scripts[] = js/additional-methods.min.js
scripts[] = js/oddhill.js